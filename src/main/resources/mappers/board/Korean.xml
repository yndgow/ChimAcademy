<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace = mapper파일의 아이디 값 -->
<mapper namespace="kr.co.ChimAcademy.dao.KoreanDAO">
	<!-- 국문학과 게시판 목록 출력 -->
	<select id="selectBoards"
		resultType="kr.co.ChimAcademy.vo.BoardVO">
		SELECT a.*, b.name FROM board AS a JOIN member AS b ON a.uid = b.uid WHERE a.depCode = 'A101'
	</select>

	<!-- 국문학과 게시판 작성 -->
	<insert id="insertBoards">
		insert into `board` set
		`depCode`='A101',
		`lecCode`=#{lecCode},
		`title`=#{title},
		`content`=#{content},
		`uid`=#{uid},
		`regip`=#{regip},
		`rdate`=NOW();
	</insert>
</mapper>