<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace = mapper파일의 아이디 값 -->
<mapper namespace="kr.co.ChimAcademy.dao.KoreanDAO">
	<!-- 국문학과 게시판 목록 출력(List) -->
	<select id="selectBoards"
		resultType="kr.co.ChimAcademy.vo.BoardVO">
		SELECT a.*, b.name
		FROM `board` AS a
		JOIN `member` AS b
		ON a.uid = b.uid
		WHERE a.depCode = 'A101'
		ORDER BY `rdate` desc limit #{start}, 10;
	</select>

	<!-- 국문학과 게시판 보기(View) -->
	<select id="selectBoard" resultType="kr.co.ChimAcademy.vo.BoardVO">
		SELECT a.*, b.name
		FROM `board` AS a
		JOIN `member` AS b
		ON a.uid = b.uid where `no`=#{no};
	</select>

	<!-- 국문학과 게시판 작성(Write) -->
	<insert id="insertBoard" useGeneratedKeys="true" keyProperty="no">
		INSERT INTO `board` SET
		`depCode`='A101',
		`title`=#{title},
		`content`=#{content},
		`uid`=#{uid},
		`regip`=#{regip},
		`rdate`=NOW();
	</insert>
	
	<!-- 국문학과 게시판 삭제(Delete) -->
	<delete id="deleteBoard">
		delete from `board` where `no`=#{no};
	</delete>

	<!-- 국문학과 게시판 글 수정(Update) -->
	<update id="updateBoard" useGeneratedKeys="true" keyProperty="no">
		update `board` set
			`depCode`='A101',
			`title`=#{title},
			`content`=#{content},
			`rdate`= NOW()
			where `no`=#{no};	
	</update>
	
	<!-- 페이징(Paging) -->
	<select id="selectCount" resultType="int">
		SELECT COUNT(`no`) FROM `board` WHERE `depCode` = 'A101';
	</select>

</mapper>