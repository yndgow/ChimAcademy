<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ChimAcademy.dao.JapaneseDAO">
	
	<select id="selectJapaneses" resultType="kr.co.ChimAcademy.vo.BoardVO">
		SELECT a.*, b.* FROM `board` AS a
		JOIN `member` as b
		ON a.uid = b.uid
		WHERE a.depCode = 'P701' and a.parent = 0 
		order by a.rdate desc limit #{start}, 10;
	</select>
	
	<select id="selectJapanese" resultType="kr.co.ChimAcademy.vo.BoardVO">
		SELECT * from `board` where `no` = #{no};
	</select>
	
	<!-- 게시판 등록-->
	<insert id="insertJapanese">
		insert into `board` set
			`depCode`='P701',
            `lecCode`=#{lecCode},
            `title`=#{title},
            `content`=#{content},
            `uid`=#{uid},
            `regip`=#{regip},
            `rdate`=NOW();
	</insert>
	
	<!-- 댓글-->
	<insert id="insertComment">
		insert into `board` set
			`depCode`='P701',
            `content`=#{content},
            `uid`=#{uid},
            `regip`=#{regip},
            `rdate`=NOW(),
            `parent` = #{parent};
            
	</insert>
	
	<!-- 댓글보기-->
	<select id="selectComment" resultType="kr.co.ChimAcademy.vo.BoardVO">
		SELECT * from `board` where `parent` = #{no}  AND `depCode`= 'P701' ORDER BY `no` desc;
	</select>
	
	<!-- 댓글수정-->
	<update id="updateComment">
	  UPDATE `board` set
		`depCode`='P701',
	    `lecCode`=#{lecCode},
	    `content`=#{content},
	    `uid`=#{uid},
	    `regip`=#{regip},
	    `rdate`=NOW()
	  	WHERE `no` = #{no}
	</update>
	
	<!-- 댓글수정-->
	<update id="updateJapanese">
	  UPDATE `board` set
		`depCode`='P701',
	    `lecCode`=#{lecCode},
	    `content`=#{content},
	    `uid`=#{uid},
	    `regip`=#{regip},
	    `rdate`=NOW()
	  	WHERE `no` = #{no}
	</update>
		
	<!-- 좋아요, 싫어요 수정-->
	<update id="goodComment">
	  UPDATE `board` set
		`good` = `good`+ 1
	  	WHERE `no` = #{no};
	</update>
	
	<update id="badComment">
	  UPDATE `board` set
		`bad` = `bad`+ 1
	  	WHERE `no` = #{no};
	</update>
	
	<!-- 조회수 증가-->
	<update id="hitJapanese">
	   UPDATE `board` set
		`hit` = `hit`+ 1
	  	WHERE `no` = #{no};
	</update>
	
	<delete id="deleteJapanese">
		DELETE from `board` WHERE `no` = #{no};
	</delete>
	
	<!-- 게시판 페이징-->
	<select id="selectCountTotal" resultType="int">
		select count(`no`) from `board` WHERE `depCode` = 'P701'; 
	</select>


</mapper>